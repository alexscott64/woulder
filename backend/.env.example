# Server Configuration
PORT=8080
GIN_MODE=release
# Disable background syncs (useful for development)
DISABLE_BACKGROUND_SYNCS=false

# OpenWeatherMap API (optional, Open-Meteo is primary)
OPENWEATHERMAP_API_KEY=your_api_key_here

# PostgreSQL Database Configuration
DB_HOST=your-database-endpoint
DB_PORT=5432
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=your_database_name
DB_SSLMODE=require

# Database Connection Pool Configuration
# Maximum number of open connections to the database
# - Increase for high-concurrency workloads (e.g., 50-100)
# - If using PgBouncer, should match or be less than PgBouncer's pool size
DB_MAX_OPEN_CONNS=25

# Maximum number of idle connections in the pool
# - Should be <= DB_MAX_OPEN_CONNS
# - Higher values reduce connection establishment overhead
DB_MAX_IDLE_CONNS=5

# Maximum lifetime of a connection in minutes
# - Prevents stale connections and helps with load balancer rotation
# - Set lower (1-2) if using PgBouncer or facing firewall timeouts
DB_CONN_MAX_LIFETIME_MINUTES=5

# Maximum idle time for a connection in minutes
# - Closes unused connections to free database resources
DB_CONN_MAX_IDLE_TIME_MINUTES=5

# Cache Configuration (minutes)
CACHE_DURATION=10

# Google Earth Engine (Service Account)
GOOGLE_EARTH_ENGINE_PROJECT_ID=project-id
GOOGLE_EARTH_ENGINE_CLIENT_EMAIL=service-id-email@email.com
GOOGLE_EARTH_ENGINE_PRIVATE_KEY="private-key"